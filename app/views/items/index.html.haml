= render :partial => "shared/search"

%div#item_list.col-lg-12
  - if current_user.role == "seller"
    %h2=link_to "Create a New Listing", new_item_path
    %br

  - @items.reverse.each do |item|
    .well
      %h3= link_to item.title, item
      %p= item.description
      %h4= "$#{item.price}"
      %button.btn= link_to "Add to Cart", add_cart_path(id: item.id), method: :post
